<%= javascript_include_tag 'rubycas_session' %>
<%= form_for :login, :remote => true, :html => { :id => "login_form" } do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :remember %>
    <%= f.check_box :remember %>
  </p>
  <p>
    <%= f.hidden_field :lt %>
    <%= f.submit "Login" %><img id="loading" src="loading.gif" style="display:none"/>
  </p>
<% end %>